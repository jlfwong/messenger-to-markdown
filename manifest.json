{
  "manifest_version": 2,
  "name": "Messenger to Markdown",
  "description": "Convert Messenger chats to markdown",
  "version": "1.0",
  "browser_action": {
    "default_title": "Messenger to Markdown",
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  // clipboardWrite is required by Firefox but not Chrome
  "permissions": ["activeTab", "clipboardWrite"]
}
